@model CheeseMVC.ViewModels.ViewMenuViewModel

@{ 
    ViewBag.Title = Model.Menu.Name;
}

<ul class="list-group">
    @foreach (var menuItem in Model.Items)
    {
        <li>@menuItem.Cheese.Name;</li>
    }
</ul>

<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID">Add Menu Item</a></p>